# ======================
# Client Bridge Configuration
# ======================

# VPS Connection
VITE_VPS_API_URL=https://compendiumnav.com
VPS_HOST=compendiumnav.com
VPS_PORT=8080  # Different from server's 8081
VPS_PATH=/relay

# Android build uses the public HTTPS endpoints
VITE_DIRECT_WS_URL_ANDROID=wss://compendiumnav.com/relay
VITE_RELAY_SERVER_URL=wss://compendiumnav.com/relay

# Skip local boat detection over HTTP on Android
VITE_DIRECT_BOAT_HOST=
VITE_DIRECT_BOAT_PORT=
VITE_DIRECT_BOAT_PATH=
VITE_DIRECT_BOAT_TIMEOUT=

# Optional: direct HTTPS API if you really need a fallback
VITE_LOCAL_API_URL=https://compendiumnav.com

# Connection Settings
RECONNECT_TIMEOUT=10000  # ms
HEARTBEAT_INTERVAL=30000  # ms

# Client Identification
CLIENT_ID_PREFIX=compendium_
MAX_SUBSCRIPTIONS=50

# Debugging
VITE_CLIENT_DEBUG=false