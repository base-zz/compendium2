# ======================
# Client Bridge Configuration
# ======================

# VPS Connection
VITE_VPS_API_URL=https://compendiumnav.com
VPS_HOST=compendiumnav.com
VPS_PORT=8080  # Different from server's 8081
VPS_PATH=/relay

# Local Connection
VITE_DIRECT_WS_URL=ws://compendium.local:3009/

# Connection Settings
RECONNECT_TIMEOUT=10000  # ms
HEARTBEAT_INTERVAL=30000  # ms

# Relay Server URL (WebSocket)
VITE_RELAY_SERVER_URL=wss://compendiumnav.com/relay

# Client Identification
CLIENT_ID_PREFIX=compendium_
MAX_SUBSCRIPTIONS=50

# Debugging
CLIENT_DEBUG=false

